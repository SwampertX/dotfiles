    status_command /usr/bin/i3status-rs /home/yeejian/.config/i3status-rust/config.toml
    colors {
        # bar background color
        background $bg
        # text color used for blocks that do not have a color specified.
        statusline $yellow
        # workspaces section
        #                    border  backgr. text
        focused_workspace    $blue $blue $white
        inactive_workspace   $darkgray $darkgray $white
        active_workspace     $darkgray $darkgray $white
        urgent_workspace     $red $red $bg
    }
    tray_output primary
}
